<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}WeDrop{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/dist/css/default.min.css') }}">
        <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
    page. However, you can choose any other skin. Make sure you
    apply the skin class to the body tag so the changes take effect. -->
        <link rel="stylesheet" href="{{ asset('assets/css/dist/css/skins/skin-blue-light.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/common.css') }}">
    {% endblock %}
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

{% set current_route = app.request.attributes.get('_route') %}
<body class="hold-transition skin-blue-light sidebar-mini">
    <div class="wrapper">
    <!-- Main Header -->

        <header class="main-header">
            {% block header %}
                {% include 'default/header.html.twig' %}
            {% endblock %}
        </header>

        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            {% block left_sidebar %}
                {% include 'default/left-sidebar.html.twig' %}
            {% endblock %}
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="col-md-9">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    {% block content_header %}
                        {% include 'default/content-header.html.twig' %}
                    {%  endblock %}
                </section>
                <!-- Main content -->
                <section class="content container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            {% block content %}{% endblock %}
                        </div>
                    </div>

                </section>
            </div>
            {% block right_sidebar %}
                {% include 'default/right-sidebar.html.twig' %}

            {% endblock %}
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Main Footer -->
        <footer class="main-footer">
            {% block footer %}
                {% include 'default/footer.html.twig' %}
            {% endblock %}
        </footer>

    </div>
<!-- ./wrapper -->
{% block javascripts %}
    <!-- jQuery 3 -->
    <script src="{{ asset('assets/js/jquery/dist/jquery.min.js') }}"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="{{ asset('assets/css/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <!-- AdminLTE App -->
    <script src="{{ asset('assets/js/js/default.js') }}"></script>
{% endblock %}
</body>
</html>
